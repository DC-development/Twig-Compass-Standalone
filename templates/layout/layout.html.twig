{% extends "layout/base.html.twig" %}
{% block title %}My Bootstrap Site
{% endblock title %}
       {% block stylesheets %}
           <!-- If you are using the gem version, you need this only -->
           <link rel="stylesheet" href="stylesheets/main.css">

           <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
           <!--[if lt IE 9]>
           <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
           <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
           <![endif]-->
       {% endblock stylesheets %}

        {% block body %}
            <div id="container">
                <div class='two-col'>
                    <section id="navi">
                        {% block navigation %}
                            {% include "components/bootstrap/navigation.html.twig" with { 'sliderData':sliderData } %}
                        {% endblock navigation %}
                    </section>
                    <section id='header'>
                        {% block header%}
                            {% include "components/bootstrap/carousel.html.twig" %}
                        {% endblock header%}
                    </section>
                    <section id='sidebar'>
                        {% block sidebar %}
                            {% include "components/bootstrap/pills.html.twig" %}
                        {% endblock sidebar %}
                    </section>
                    <section id='content'>
                        {% block content %}
                        {% endblock content %}
                    </section>
                    <section id='footer'>
                        This is the footer.
                    </section>
                </div>
            </div>
        {% endblock body %}

        {% block javascripts %}
            <script src="bower_components/bootstrap-sass/js/tests/vendor/jquery.js"></script>
            <script src="bower_components/bootstrap-sass/dist/js/bootstrap.min.js"></script>
            <script src="js/holder.js"></script>
       
        {% endblock javascripts %}
