
<!-- Carousel
================================================== -->

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->    
    <ol class="carousel-indicators">
        {% for n in sliderData %}
         <li data-target="#myCarousel" data-slide-to="{{ loop.index-1 }}" class="{% if loop.first %}active{% endif %}"></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% for n in sliderData %}
            <div class="item {% if loop.first %}active{% endif %}">
                <img data-src="{{  n.image }}" alt="Generic placeholder thumbnail">
                <div class="container">
                    <div class="carousel-caption">
                        {% if n.caption is defined %}<h1>{{  n.caption }}</h1>{% endif %}
                        {% if n.text is defined %}<p>{{  n.text }}</p>{% endif %}
                        {% if n.target is defined %} <p><a class="btn btn-lg btn-primary" href="{{  n.target }}" role="button">{{ n.btntext }}</a></p>{% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div><!-- /.carousel -->
